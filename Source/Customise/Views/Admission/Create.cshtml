<script type="text/javascript">
    var form_clean;
    $(document).ready(function () {

        var AdmissionId = @Model.AdmissionId;

        //Calling the function to load the table data/ Line information
        LoadContents();

    });


    var id=@Model.AdmissionId;
    if(id==null||id==0)
    {
        $(document).find('a#btnCreate').removeAttr('href').removeAttr('data-modal');
    }

    if(id!=null&&id!=0)
    {
        $("#ExistingStudentId").prop('readonly', true);
    }




    //Reloading the table contents on modal hide
    $('#myModal').on('hidden.bs.modal', function () {
        LoadContents();

    });


    //To focus on the first element on modal load
    $('#myModal').on('shown.bs.modal', function () {
        $("#AdmissionId").focus()
    });




    //Loading the Table data or Line Information
    function LoadContents() {
        var AdmissionId=@Model.AdmissionId;
        var link="/Admission/FacilityIndex/"+AdmissionId;
        $.ajax({
            url: link,
            type: "GET",
            success: function (data) {
                var row = ""
                var srno=1;
                var head="<tr style='background-color:#428bca'>  <th style='width:10px'><input type='hidden'  /></th> <th style='width:10px'>Serial</th><th class='center' style='width:50px'>Facility</th>   <th class='center' style='width:50px'>Start Date</th>   <th class='center' style='width:50px'>End Date</th>   <th style='width:10px'></th>       <th style='width:10px'></th>  </tr>"
                if(data.length!=0)
                {
                    $.each(data, function (index, item) {
                        row += "<tr><td><input type='hidden' class='id' value='" + item.FacilityEnrollmentId + "'/></td> <td>"+ srno +"</td> <td>"+(item.FacilityName==null?" ":""+item.FacilityName+"")+"</td>        <td>"+(item.StartDate ==null?" ":""+item.StartDate +"")+"</td>        <td>"+(item.EndDate==null?" ":""+item.EndDate+"")+"</td>        <td><a class='hidden' Modify href='/AdmissionLine/_Edit/"+item.FacilityEnrollmentId+"' ></a></td>       <td><a class='glyphicon glyphicon-trash' data-modal='' delete='' href='/AdmissionLine/_Edit/"+item.FacilityEnrollmentId+"' ></a></td>  </tr>";
                        srno++;
                    });
                }
                else
                {
                    row+="<tr><td>No Items Found.</td></tr>";
                }
                $("#ContentHeader").html(head);
                $("#ContentLine").html(row);
            },
            error: function (result) {
                alert("Error");
            }
        });
    }







    //For Populating Modal PopUp on DoubleClick Of Row
    $('#ContentLine').on("dblclick",'tr',function(){
        var text = $(this).find(".id").val();
        var editurl=$(this).find('a[Modify]').attr('href');




        $('#myModalContent').load(editurl, function () {
            //alert('2');
            $('#myModal').modal({
                backdrop: 'static',
                keyboard: true
            }, 'show');

            bindForm1(this);
        });
    });








    //For Handling Modal PopUp on Clicking Delete Icon
    $('#ContentLine').on("click",'a[delete]', function (e) {
        $('#myModalContent').load(this.href, function () {
            //alert('2');
            $('#myModal').modal({
                backdrop: 'static',
                keyboard: true
            }, 'show');

            bindForm1(this);
        });
        return false;
    });



    //For posting the data through ajax and render the contents sent back from the server
    function bindForm1(dialog) {
        //alert("binding");
        $('form', dialog).submit(function () {
            //alert(this.action);
            $.ajax({
                url: this.action,
                type: this.method,
                data: $(this).serialize(),
                success: function (result) {
                    if (result.success) {
                        $('#myModal').modal('hide');
                        //Refresh
                        //location.reload();
                        //alert('Data Saved');
                    }else if(!result.success)
                    {
                        $('#myModalContent').html(result);
                        bindForm1();
                    }
                    else {
                        $('#myModalContent').html(result);
                        bindForm1();
                    }
                }
            });
            return false;
        });

    }








    function Validate_Student() {
        //alert ($("#ProductUidName").val());
        var ProcessProgress = $("#Student detail loading progress");
        ProcessProgress.show();
            if ($("#ExistingStudentId").val() != "") {
                $.ajax({
                    cache: false,
                    type: "POST",
                    url: "@(Url.Action("GetStudentDetailJson"))",
                    data: { StudentId : $("#ExistingStudentId").val() },
                success: function (data) {
                    if (Object.keys(data).length != 0) {
                        $("#StudentName").val(data[0].Name);
                        $("#Suffix").val(data[0].Suffix);
                        $("#Code").val(data[0].Code);
                        $("#Gender").val(data[0].Gender);
                        $("#DOB").val(formatDate('d/m/Y',new Date(parseInt(data[0].DOB.substr(6)))));
                        //$("#DOB").val(formatDate('dd/MMMM/yyyy',new Date(parseInt(data[0].DOB.substr(12)))));
                        $("#CastCategory").val(data[0].CastCategory);
                        $("#Religion").val(data[0].Religion);
                        $("#Address").val(data[0].Address);
                        $("#CityId").select2("data", { id: data[0].CityId, text: data[0].CityName });
                        $("#Zipcode").val(data[0].Zipcode);
                        $("#Mobile").val(data[0].Mobile);
                        $("#EMail").val(data[0].Email);
                        $("#FatherName").val(data[0].FatherName);
                        $("#MotherName").val(data[0].MotherName);
                        $("#GuardianName").val(data[0].GuardianName);
                        $("#GuardianMobile").val(data[0].GuardianMobile);
                        $("#GuardianEMail").val(data[0].GuardianEMail);
                    }
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert('Failed to retrieve product Uid details.' + thrownError);
                    ProcessProgress.hide();
                }
            });
        }
    }


