</div>



@using (Html.BeginForm("Create", "UnScheduledFeeDueHeader", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.FeeDueHeaderId)
    @Html.HiddenFor(model => model.DocTypeId)

    <div class="panel panel-default">

