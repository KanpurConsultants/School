}


<script>
    $(document).ready(function () {
        CustomSelectFunction($("#FeeId"), '/ComboHelpList/GetFee', '/ComboHelpList/SetSingleFee', ' ', false, 0);
    });
</script>

<script type="text/javascript">

    


    $(":submit").on("click", function () {
        var mpoid=@Model.FeeDueHeaderId;
        var tes;
        if(mpoid<=0)
        {
            tes= $('#UnScheduledFeeDueHeaderName').DuplicateCheckForCreate({ name: 'UnScheduledFeeDueHeader', value: $('#UnScheduledFeeDueHeaderName').val(), doctype: 0 });
        }
        else
        {
            tes = $('#UnScheduledFeeDueHeaderName').DuplicateCheckForEdit({ name: 'UnScheduledFeeDueHeader', value: $('#UnScheduledFeeDueHeaderName').val(), doctype: 0,headerId:mpoid });
        }
        if (tes) {
            return false;
        }
        else
        {
            return;
        }
    });

    var IsSaved=false;
    var ValidationCount=0;

    $('form').submit(function(event){

        if(!IsSaved)
        {
            if(!ValidateData())
            {
                return false;
            }
            IsSaved=true;
            return IsSaved;
        }
        else
        {
            return false;
        }
    });

</script>



<script type="text/javascript">
    var form_clean;
    $(document).ready(function () {

        var FeeDueHeaderId = @Model.FeeDueHeaderId;
        //Calling the function to load the table data/ Line information
        LoadContents();

    });




    var id=@Model.FeeDueHeaderId;
    if(id==null||id==0)
    {
        $(document).find('a#btnCreate').removeAttr('href').removeAttr('data-modal');
    }

  

    //Reloading the table contents on modal hide
    $('#myModal').on('hidden.bs.modal', function () {
        LoadContents();

    });


    //To focus on the first element on modal load
    $('#myModal').on('shown.bs.modal', function () {
        $("#FeeDueHeaderId").focus()
    });




    //Loading the Table data or Line Information
    function LoadContents() {
        var FeeDuenHeaderId=@Model.FeeDueHeaderId;
        var link="/UnScheduledFeeDueLine/Index/"+FeeDuenHeaderId;
        $.ajax({
            url: link,
            type: "GET",
            success: function (data) {
                var row = ""
                var srno=1;
                var head="<tr style='background-color:#428bca'>  <th style='width:10px'><input type='hidden'  /></th> <th style='width:10px'>Serial</th><th class='center' style='width:50px'>Student</th>   <th class='center' style='width:50px'>Program</th>   <th class='center' style='width:50px'>Stream</th>   <th class='center' style='width:50px'>Class</th>   <th class='center' style='width:50px'>Amount</th>   <th style='width:10px'></th>       <th style='width:10px'></th>  </tr>"
                if(data.length!=0)
                {
                    $.each(data, function (index, item) {
                        row += "<tr><td><input type='hidden' class='id' value='" + item.FeeDueLineId + "'/></td> <td>"+ srno +"</td> <td>"+(item.StudentName==null?" ":""+item.StudentName+"")+"</td>        <td>"+(item.ProgramName==null?" ":""+item.ProgramName+"")+"</td>        <td>"+(item.StreamName==null?" ":""+item.StreamName+"")+"</td>   <td>"+(item.ClassName==null?" ":""+item.ClassName+"")+"</td>   <td>"+(item.Amount==null?" ":""+item.Amount+"")+"</td>   <td><a class='hidden' Modify href='/UnScheduledFeeDueLine/_Edit/"+item.FeeDueLineId+"' ></a></td>       <td><a class='glyphicon glyphicon-trash' data-modal='' delete='' href='/UnScheduledFeeDueLine/_Edit/"+item.FeeDueLineId+"' ></a></td>  </tr>";
                        srno++;
                    });
                }
                else
                {
                    row+="<tr><td>No Items Found.</td></tr>";
                }
                $("#ContentHeader").html(head);
                $("#ContentLine").html(row);
            },
            error: function (result) {
                alert("Error");
            }
        });
    }







    //For Populating Modal PopUp on DoubleClick Of Row
    $('#ContentLine').on("dblclick",'tr',function(){
        var text = $(this).find(".id").val();
        var editurl=$(this).find('a[Modify]').attr('href');




        $('#myModalContent').load(editurl, function () {
            //alert('2');
            $('#myModal').modal({
                backdrop: 'static',
                keyboard: true
            }, 'show');

            bindForm1(this);
        });
    });








    //For Handling Modal PopUp on Clicking Delete Icon
    $('#ContentLine').on("click",'a[delete]', function (e) {
        $('#myModalContent').load(this.href, function () {
            //alert('2');
            $('#myModal').modal({
                backdrop: 'static',
                keyboard: true
            }, 'show');

            //alert(this.id);
            bindForm1(this);
        });
        return false;
    });






    //For posting the data through ajax and render the contents sent back from the server
    function bindForm1(dialog) {
        //alert("binding");
        $('form#modform', dialog).submit(function () {
            //alert(this.action);
            $.ajax({
                url: this.action,
                type: this.method,
                data: $(this).serialize(),
                success: function (result) {
                    if (result.success) {
                        $('#myModal').modal('hide');
                        //Refresh
                        //location.reload();
                        //alert('Data Saved');
                    }else if(!result.success)
                    {
                        $('#myModalContent').html(result);
                        bindForm1();
                    }
                    else {
                        $('#myModalContent').html(result);
                        bindForm1();
                    }
                }
            });
            return false;
        });

    }

       

</script>

