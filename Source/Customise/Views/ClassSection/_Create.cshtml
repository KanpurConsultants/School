
@model Surya.India.Model.Models.Sch_ClassSection
@using Surya.India.Core.Common

<div class="modal-content">
    <div class="modal-header" style="border-bottom: 1px solid #8E8888">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> <span class="glyphicon glyphicon-remove"></span></button>
        <h3>
            <span style="font-family: Calibri,sans-serif,Verdana;font-weight:bold" class="black"><span class="glyphicon glyphicon-file black"></span> Section  </span>
        </h3>
    </div>
    <div>
        @using (Html.BeginForm("_CreatePost", "ClassSection", FormMethod.Post, new { enctype = "multipart/form-data", id = "modform" }))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(model => model.ProgramId)
            @Html.HiddenFor(model => model.ClassId)
            @Html.HiddenFor(model => model.StreamId)
            @Html.HiddenFor(model => model.ClassSectionId)

            <div class="form-horizontal modal-body">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <br />

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.SectionName, "Section", new { @class = "control-label col-xs-3" })
                            <div class="col-xs-7">
                                @Html.TextBoxFor(model => model.SectionName, new { @class = "form-control col-xs-9 required" })
                            </div>
                        </div>
                    </div>
                </div>

                <br />
                

                    <div class="modal-footer " style="padding: 19px 20px 0 20px; border-top:1px solid #8E8888">
                        <button class="btn custom left" name="Command:Edit" type="submit"><h2 style="margin:0px" id="submit"><span class="glyphicon glyphicon-floppy-disk black"></span> </h2></button>
                        <button class="btn custom" name="Command:Delete" id="delete" type="submit"><h2 style="margin:0px"><span class="glyphicon glyphicon-trash black"></span> </h2></button>
                    </div>
                </div>
        }
    </div>
</div>


