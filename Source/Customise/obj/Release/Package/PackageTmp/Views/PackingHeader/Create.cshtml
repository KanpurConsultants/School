                                    <div class="col-xs-6">
                                        @Html.DropDownListFor(m => m.DealUnitId, new SelectList(ViewBag.DealUnitList as System.Collections.IEnumerable, "UnitId", "UnitName"), new { @class = "form-control col-xs-6 height" })
